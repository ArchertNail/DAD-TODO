<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dad.todo.login.registrate.RegistrateController">
   <children>
      <JFXTextField fx:id="usernameText" labelFloat="true" prefColumnCount="18" promptText="Username">
         <VBox.margin>
            <Insets bottom="20.0" top="30.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="20.0" top="10.0" />
         </padding>
         <font>
            <Font size="18.0" />
         </font>
      </JFXTextField>
      <JFXPasswordField fx:id="passwordText" labelFloat="true" prefColumnCount="18" promptText="Password">
         <font>
            <Font size="18.0" />
         </font>
         <padding>
            <Insets bottom="20.0" top="10.0" />
         </padding>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </JFXPasswordField>
      <JFXTextField fx:id="nombreText" labelFloat="true" prefColumnCount="18" promptText="Nombre">
         <padding>
            <Insets bottom="20.0" top="10.0" />
         </padding>
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </JFXTextField>
      <JFXTextField fx:id="emailText" labelFloat="true" prefColumnCount="18" promptText="Email">
         <padding>
            <Insets top="10.0" />
         </padding>
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </JFXTextField>
      <JFXButton fx:id="registrarButton" alignment="CENTER" buttonType="RAISED" onAction="#onRegistrarAction" style="-fx-border-style: solid inside; -fx-border-color: #4059a9; -fx-background-radius: 7; -fx-background-color: #FFFFFF;" text="Registrar">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </JFXButton>
   </children>
</VBox>
