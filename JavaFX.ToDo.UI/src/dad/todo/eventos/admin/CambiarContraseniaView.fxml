<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dad.todo.eventos.admin.PassController">
   <children>
      <GridPane>
        <columnConstraints>
